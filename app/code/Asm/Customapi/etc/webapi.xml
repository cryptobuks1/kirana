<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/country/" method="GET">
        <service class="Asm\Customapi\Api\CountryInterface" method="country"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

    <route url="/V1/regions/" method="GET">
        <service class="Asm\Customapi\Api\RegionsInterface" method="regions"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
        <!-- <data>
            <parameter name="countryCode" force="true">%country_code%</parameter>
        </data> -->
    </route>

    <route url="/V1/city/" method="GET">
        <service class="Asm\Customapi\Api\CityInterface" method="name"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    
    <route url="/V1/area/" method="POST">
        <service class="Asm\Customapi\Api\AreaInterface" method="area"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

    <route url="/V1/locality/" method="POST">
        <service class="Asm\Customapi\Api\LocalityInterface" method="locality"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <!-- Address change -->
    <route url="/V1/address/change" method="POST">
        <service class="Asm\Customapi\Api\AddresschangeInterface" method="addresschange"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

    <route url="/V1/outofrange/" method="POST">
        <service class="Asm\Customapi\Api\OutofrangeInterface" method="outofrange"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

    <route url="/V1/flushcart/" method="POST">
        <service class="Asm\Customapi\Api\FlushcartInterface" method="flushcart"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <!-- Orgnized retailer -->
    <route url="/V1/orgnizedretailer/" method="POST">
        <service class="Asm\Customapi\Api\OrgnizedretailerInterface" method="orgreailer"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <!-- Clear cart -->
    <route url="/V1/clearcart/" method="POST">
        <service class="Asm\Customapi\Api\ClearcartInterface" method="clearcart"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <!-- Orgnized retailer Add -->
    <route url="/V1/orgnizedretailer/add" method="POST">
        <service class="Asm\Customapi\Api\AddorgnizedretailerInterface" method="addorgreailer"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

    <!-- custom order details -->
    <route url="/V1/order/details" method="POST">
        <service class="Asm\Customapi\Api\OrderdetailsInterface" method="orderdetails"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

    <!-- orgnized retailer info -->
    <route url="/V1/orgnizedretailer/info" method="POST">
        <service class="Asm\Customapi\Api\OrgnizedretailerinfoInterface" method="orgnizedretailerinfo"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <!-- Add new customer address -->
    <route url="/V1/add/customer/address" method="POST">
        <service class="Asm\Customapi\Api\NewaddressInterface" method="newcustomeraddress"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <!-- Edit customer address -->
    <route url="/V1/edit/customer/address" method="POST">
        <service class="Asm\Customapi\Api\EditaddressInterface" method="editcustomeraddress"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <!-- Delete customer address -->
    <route url="/V1/delete/customer/address/:addressId" method="DELETE">
        <service class="Asm\Customapi\Api\DeleteaddressInterface" method="deletecustomeraddress"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <!-- Set customer address as default -->
    <route url="/V1/setdeafult/customer/address/" method="POST">
        <service class="Asm\Customapi\Api\SetdefaultaddressInterface" method="setdefaultcustomeraddress"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <!-- Get Wishlist Item -->
    <route url="/V1/wishlist/items" method="POST">
        <service class="Asm\Customapi\Api\WishlistInterface" method="wishlistitems"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <!-- Add Wishlist Item -->
    <route url="/V1/wishlist/items/add" method="POST">
        <service class="Asm\Customapi\Api\AddwishlistInterface" method="addwishlistitems"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <!-- Merge cart items -->
    <route url="/V1/merge/cart/items" method="POST">
        <service class="Asm\Customapi\Api\MergeItemInterface" method="mergecartitems"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>
